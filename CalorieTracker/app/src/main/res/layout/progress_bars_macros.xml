<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Energy"
            android:textColor="#000000"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <TextView
                android:id="@+id/pbm_energy_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:gravity="left"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / "/>

            <TextView
                android:id="@+id/pbm_energy_goal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2500"/>

        </LinearLayout>


        <TextView
            android:id="@+id/pbm_energy_percent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0 %"
            android:layout_weight="1"
            android:gravity="right"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/pbm_energy"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="45"
        android:progressDrawable="@drawable/custom_progress_energy"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Protein"
            android:textColor="#000000"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2" >

            <TextView
                android:id="@+id/pbm_protein_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:gravity="left"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / "/>

            <TextView
                android:id="@+id/pbm_protein_goal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2500"/>

        </LinearLayout>


        <TextView
            android:id="@+id/pbm_protein_percent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0 %"
            android:layout_weight="1"
            android:gravity="right"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/pbm_protein"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="45"
        android:progressDrawable="@drawable/custom_progress_protein"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Carbs"
            android:textColor="#000000"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <TextView
                android:id="@+id/pbm_carbs_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:gravity="left"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / "/>

            <TextView
                android:id="@+id/pbm_carbs_goal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2500"/>

        </LinearLayout>


        <TextView
            android:id="@+id/pbm_carbs_percent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0 %"
            android:layout_weight="1"
            android:gravity="right"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/pbm_carbs"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="45"
        android:progressDrawable="@drawable/custom_progress_carbs"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Fat"
            android:textColor="#000000"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2" >

            <TextView
                android:id="@+id/pbm_fat_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:gravity="left"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / "/>

            <TextView
                android:id="@+id/pbm_fat_goal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2500"/>

        </LinearLayout>


        <TextView
            android:id="@+id/pbm_fat_percent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0 %"
            android:layout_weight="1"
            android:gravity="right"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/pbm_fat"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="45"
        android:progressDrawable="@drawable/custom_progress_fat"/>

</LinearLayout>